  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "kafkajs": "^2.2.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "update-browserslist-db": "^1.1.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.8",
    "autoprefixer": "^10.4.21",
    "browserslist": "^4.25.0",
    "eslint": "^9.28.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "npm-check-updates": "^18.0.1",
    "postcss": "^8.5.4",
    "tailwindcss": "^4.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
