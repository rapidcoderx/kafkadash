{
  "name": "kafkadash",
  "version": "1.0.0",
  "description": "Modern Kafka Dashboard with UI",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "check-updates": "ncu",
    "lint": "eslint .",
    "test": "jest",
    "build:css": "npx @tailwindcss/cli -i ./src/public/css/styles.css -o ./src/public/css/output.css --watch",
